<Window x:Class="WpfCursovaya.PagesManager.EditTour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCursovaya.PagesManager"
        mc:Ignorable="d"
        Title="EditTour"
       MinHeight="300" MinWidth="450" 
      Height="460" Width="500"
      Background="LightGray">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label
            Grid.Column="0" Grid.Row="0"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Content="Страна"
            />
        <TextBox
            x:Name="country"
            Grid.Column="1" Grid.Row="0"
            MaxLength="50"
            VerticalAlignment="Center" Height="30"/>

        <Label
            Grid.Column="0" Grid.Row="1"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Content="Город"
            />
        <TextBox
            Grid.Column="1" Grid.Row="1"
            MaxLength="50"
            VerticalAlignment="Center" Height="30"
            x:Name="town"
            />

        <Label
            Grid.Column="0" Grid.Row="2"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Content="Место"
            />
        <TextBox
            Grid.Column="1" Grid.Row="2"
            MaxLength="50"
            VerticalAlignment="Center" Height="30"
            x:Name="placeC"
            />

        <Label
            Grid.Column="0" Grid.Row="3"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Content="Дата проведения"
            />
        <TextBox
            Grid.Column="1" Grid.Row="3"
            MaxLength="50"
            VerticalAlignment="Center" Height="30"
            x:Name="dataC"
            />

        <Label
            Grid.Column="0" Grid.Row="4"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Content="Цена билета"
            />
        <TextBox
            Grid.Column="1" Grid.Row="4"
            MaxLength="50"
            VerticalAlignment="Center" Height="30"
            x:Name="cost"
            />

        <Label
            Grid.Column="0" Grid.Row="5"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Content="Группа"
            />
        <ComboBox
            x:Name="GroupS"
            Grid.Column="1" Grid.Row="5"
            Width="300" Height="30"          
            >
            <TextBlock Text="Monsta X" ></TextBlock>
            <TextBlock Text="WJSN" ></TextBlock>
            <TextBlock Text="Соло" ></TextBlock>
        </ComboBox>

        <Button
            Grid.Row="6" Grid.Column="1"
            VerticalAlignment="Bottom" HorizontalAlignment="Right"
            Content="Сохранить"
            Width="90" Height="30"
            Name="btnSave" 
            Click="BtnSave_click"/>

        <Button
                Grid.Column="1" Grid.Row="6"
                Content="Назад"     
            VerticalAlignment="Bottom"
                 Width="100" Height="30" Click="Button_Click">

        </Button>

        <Label
            Grid.Column="0" Grid.Row="6"
            Name="idContent"
            Content=" "
            Foreground="WhiteSmoke"
            /> 
    </Grid>
</Window>
